@model kursa42.ViewModels.LoginModel

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" style="margin-top: 250px; margin: 50px auto; width: 400px; ">
    <h2 style="margin-left:30%">Авторизация</h2>
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Введите Email:</label> <br />
            <input type="text" class="form-control" placeholder="" aria-label="Email" aria-describedby="button-addon1" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль:</label> <br />
            <input type="text" class="form-control" placeholder="" aria-label="Password" aria-describedby="button-addon1" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group" style="margin-left:40%">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>